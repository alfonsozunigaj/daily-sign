<h1 align="center"><b>Daily Sign</b></h1>

<hr/>

<div class="row">
  <div class="col-3">
    <h3>Categories</h3>
    <div class="nav flex-column nav-pills categories" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <%= render partial: 'categories/category', collection: @categories %>
    </div>
    <br/>
    <div id="new-category">
      <%= link_to 'New Category', new_category_path, class: 'btn btn-outline-link', remote: true %>
    </div>
  </div>
  <div class="col-9">
    <h3>Phrases</h3>
    <div class="tab-content" id="v-pills-tabContent">
      <%= render partial: 'categoryPhrases', collection: @categories %>
    </div>
  </div>
</div>
