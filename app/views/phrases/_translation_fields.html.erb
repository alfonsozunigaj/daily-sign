<div class="translation">
  <div class="form-row">
    <div class="col-sm-12 col-xl-2">
      <%= f.select :language, @data.map {|v| [ v['name'].split(';').first.split(',').first, v['code'] ] }, {}, { :class => 'form-control' } %>
    </div>
    <div class="col-sm-6 col-xl-3">
      <%= f.text_field :content, class: 'form-control', placeholder: 'Content', required: true %>
    </div>
    <div class="col-sm-6 col-xl-6">
      <%= f.text_field :definition, class: 'form-control', placeholder: 'Definition', required: true %>
    </div>
    <div class="col-sm-12 col-xl-1">
      <%= f.hidden_field :_destroy %>
      <%= link_to 'remove', '#', class: 'btn btn-outline-secondary btn-block remove_fields' %>
    </div>
  </div>
  <br/>
</div>